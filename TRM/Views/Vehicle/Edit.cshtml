@model TRM.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-bg">
 <h4 class="form-title">Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailSeats" class="control-label"></label>
                <input asp-for="AvailSeats" class="form-control" />
                <span asp-validation-for="AvailSeats" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Isoperable" /> @Html.DisplayNameFor(model => model.Isoperable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RouteStopId" class="control-label"></label>
                <select asp-for="RouteStopId" class="form-control" asp-items="ViewBag.RouteStopId"></select>
                <span asp-validation-for="RouteStopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" onclick="return confirm('Vehicle info is edited')" />
            </div>
        </form>
    </div>
</div>
    <a asp-action="Index" class="form-nav"></a>
</div>

