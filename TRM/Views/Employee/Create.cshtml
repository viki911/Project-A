@model TRM.Models.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-bg">
<h4 class="form-title">Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteStopId" class="control-label"></label>
                <select asp-for="RouteStopId" class ="form-control" asp-items="ViewBag.RouteStopId"></select>
            </div>
            <div class="form-group">
                    <input type="submit" value="Create" class="btn form-nav-det"onclick="return confirm('Employee is added')" />
                    <a asp-action="Index"class="form-nav">Employee List</a>

            </div>
        </form>
    </div>
</div>
</div>
