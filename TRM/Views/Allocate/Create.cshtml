@model TRM.Models.Allocate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-bg">
<h4 class="form-title">Allocate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class ="form-control" asp-items="ViewBag.VehicleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmpId" class="control-label"></label>
                <select asp-for="EmpId" class ="form-control" asp-items="ViewBag.EmpId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RouteStopId" class="control-label"></label>
                <select asp-for="RouteStopId" class ="form-control" asp-items="ViewBag.RouteStopId"></select>
            </div>
            <div class="form-group">
                    <input type="submit" value="Create" class="btn form-nav-det" onclick="return confirm('Allocation is added')" />
                    <a asp-action="Index" class="form-nav">Allocated List</a>

            </div>
        </form>
    </div>
</div>
</div>