@model TRM.Models.Allocate

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-bg">
<h4 class="form-title">Allocate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AllocateId" />
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpId" class="control-label"></label>
                <select asp-for="EmpId" class="form-control" asp-items="ViewBag.EmpId"></select>
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteStopId" class="control-label"></label>
                <select asp-for="RouteStopId" class="form-control" asp-items="ViewBag.RouteStopId"></select>
                <span asp-validation-for="RouteStopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" onclick="return confirm('Allocation is edited')"/>
            </div>
        </form>
    </div>
</div>
    <a asp-action="Index" class="form-nav">List</a>
</div>

