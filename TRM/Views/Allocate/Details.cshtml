@model TRM.Models.Allocate

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-bg">
    <h4 class="form-title">Allocate</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmpId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RouteStop)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteStop.RouteStopId)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.AllocateId" class="form-nav-det">Edit</a> 
    <a asp-action="Index" class="form-nav-det">List</a>
